{
  "name": "swiftbite-docker",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "deno lint",
    "format": "deno fmt",
    "tag": "docker tag swiftbite schotsl/swiftbite:latest",
    "push": "docker push schotsl/swiftbite:latest",
    "build": "docker build --platform linux/amd64 -t swiftbite .",
    "deploy": "bun run build && bun run tag && bun run push"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "base64-arraybuffer": "^1.0.2",
    "openai": "^4.86.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
